{
  "configurations": {
    "run": {
      "adapter": "delve",
      "autoselect": false,
      "filetypes": ["go"],
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "debug",
        "args": ["*${Args}"]
      }
    },
    "test": {
      "adapter": "delve",
      "autoselect": false,
      "filetypes": ["go"],
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "test",
        "args": ["-test.v", "-test.run", "${TestName}"]
      }
    }
  }
}
